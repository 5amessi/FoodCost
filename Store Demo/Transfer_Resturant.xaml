<UserControl x:Class="Food_Cost.Transfer_Resturant"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Food_Cost"
             mc:Ignorable="d" 
            xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid Name="parentdrid" Visibility="Visible">
            <StackPanel Margin="80 65 0 0" VerticalAlignment="Top" Height="auto" Name="stackpanel">
                <StackPanel VerticalAlignment="Stretch">
                    <Grid  Name="MainGrid" Background="White">
                        <StackPanel>
                            <Grid>
                                <GroupBox Header="Transfer Resturants" Name="DetailsView" Margin="10 10 0 10" FontSize="20" TextBlock.FontWeight="Bold" IsEnabled="False">

                                    <Grid TextBlock.FontSize="13" TextBlock.FontWeight="Normal" Height="250">

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="4*"/>

                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Text="Transfer No." Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        <TextBox Grid.Column="1" VerticalAlignment="Center" Foreground="Black" Name="transfer_No" TextAlignment="Center" IsReadOnly="True"/>

                                        <TextBlock Text="Manual Transfer No." Foreground="Red" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,0"/>
                                        <TextBox Grid.Column="3" VerticalAlignment="Center"  Foreground="Black" Name="Manual_transfer_No" TextBlock.TextAlignment="Center" HorizontalContentAlignment="Center"/>

                                        <TextBlock Text="Transfer Date" Grid.Row="1" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                        <DatePicker Grid.Column="1" Grid.Row = "1"  VerticalAlignment="Center" Foreground="Black" Name="Transfer_dt" TextBlock.TextAlignment="Center"/>
                                        
                                        <TextBlock Text="Transfer Time" Grid.Row="1" Grid.Column="2" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap"/>
                                        <materialDesign:TimePicker Grid.Column="3" Grid.Row = "1"  VerticalAlignment="Center" Foreground="Black" Name="Transfer_TIme" TextBlock.TextAlignment="Center"/>

                                        <TextBlock Text="Status" Grid.Row="2" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        <ComboBox Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Foreground="Black" Name="Statustxt" HorizontalContentAlignment="Center" IsReadOnly="True">
                                            <ComboBoxItem IsSelected="True">Hold</ComboBoxItem>
                                            <ComboBoxItem>Rejected</ComboBoxItem>
                                            <ComboBoxItem>Approval</ComboBoxItem>
                                            <ComboBoxItem>Post</ComboBoxItem>
                                        </ComboBox>

                                        <TextBlock Text="Comments" Foreground="Black" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBox Grid.Column="3" VerticalAlignment="Center" Grid.Row="2" Grid.ColumnSpan="1" Foreground="Black" TextWrapping="Wrap" Padding="5"  Name="commenttxt"/>

                                        <TextBlock Text="Resturant :" Foreground="Red" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                        <Grid Grid.Column="1" Grid.Row="3" Margin="8 0 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox VerticalAlignment="Center" Grid.Row="2" Foreground="Black" TextBlock.TextAlignment="Center" Name="From_Resturant" IsReadOnly="True"/>
                                            <Button Grid.Column="1" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Content="..." Background="Gray" Margin="0 20 15 10" Width="42" Click="From_Resturant_Clicked"/>
                                        </Grid>

                                        <TextBlock Text="to Resturant :" Foreground="Red" Grid.Column="2" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                        <Grid Grid.Column="3" Grid.Row="3" Margin="8 0 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox VerticalAlignment="Center" Foreground="Black" TextBlock.TextAlignment="Center" Name="ToResturant" IsReadOnly="True"/>
                                            <Button Grid.Column="1" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Content="..." Background="Gray" Margin="0 20 15 10" Width="42" Click="To_Resturant_Clicked"/>
                                        </Grid>

                                        <TextBlock Text="From Kitchen :" Foreground="Red" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                        <Grid Grid.Column="1" Grid.Row="4" Margin="8 0 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox VerticalAlignment="Center" Grid.Row="3" Foreground="Black" TextBlock.TextAlignment="Center" Name="From_Kitchen" IsReadOnly="True"/>
                                            <Button Grid.Column="1" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Content="..." Background="Gray" Margin="0 20 15 10" Width="42" Click="From_Kitchen_Clicked"/>
                                        </Grid>

                                        <TextBlock Text="To Kitchen :" Foreground="Red" Grid.Row="4" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                        <Grid Grid.Row="4" Grid.Column="3" Margin="8 0 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                            </Grid.ColumnDefinitions>

                                            <TextBox VerticalAlignment="Center" Grid.Row="2" Foreground="Black" TextBlock.TextAlignment="Center" Name="To_Kitchen" IsReadOnly="True"/>
                                            <Button Grid.Column="1" VerticalAlignment="Center" TextBlock.TextAlignment="Center" Content="..." Background="Gray" Margin="0 20 15 10" Width="42" Click="To_Kitchen_Clicked"/>
                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>


                            <GroupBox Header="Items" Name="ItemsView" Grid.Column="1" Margin="10 0 10 10" FontSize="20" TextBlock.FontWeight="Bold" VerticalAlignment="Stretch" IsEnabled="False">
                                <StackPanel TextBlock.FontSize="13" TextBlock.FontWeight="Normal">

                                    <DataGrid Name="ItemsDGV" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding}"  MaxHeight="400"  Height="400" BorderBrush="Black" BorderThickness="1" MouseLeftButtonUp="ItemsDGV_MouseLeftButtonUp"
                                        ScrollViewer.HorizontalScrollBarVisibility="Auto" AutoGenerateColumns="True" ScrollViewer.CanContentScroll="True" CanUserAddRows="False" CellEditEnding="Row_Changed" >
                                    </DataGrid>

                                    <Grid>

                                        <StackPanel HorizontalAlignment="Left" Margin="10 5 0 0" Orientation="Horizontal">
                                            <Label Content="Number Of Items" FontSize="15" VerticalAlignment="Center" />
                                            <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Foreground="Black" Name="NUmberOfItems" IsReadOnly="True"/>

                                            <Label Content="Total Price :" FontSize="15" VerticalAlignment="Center"/>
                                            <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Foreground="Black" Name="Total_Price" IsReadOnly="True"/>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                            <Button Content="Add Item" Background="Gray" Margin="10"  Click="AddBtn_Click" />
                                            <Button Content="Delete Item" Background="#cb4335" Margin="10" Grid.Column="1" Click="DeleteBtn_Click"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </Grid>

                    <Grid Name="grid2"  Grid.Row="1" >

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>

                        </Grid.ColumnDefinitions>

                        <Button Foreground="Black" Name="SearchBtn" Background="#cacfd2"  FontSize="12" Padding="2" Margin="10,10,9.8,10" Click="SearchBtn_Click" Height="Auto" >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Search" Width="20"/>
                                <TextBlock HorizontalAlignment="Right"> Search </TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="1" Name="NewBtn" Foreground="Black" Background="#cacfd2"  FontSize="12" Padding="2" Margin="10,10,9.8,10" Height="Auto" Click="NewBtn_Click" >
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="20"/>
                                <TextBlock HorizontalAlignment="Right"> New</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="2" Name="TransferBtn" Background="Green"  FontSize="12" Padding="2" Margin="10" Click="TransferBtn_Click" IsEnabled="False">
                            <StackPanel Orientation="Horizontal"  >
                                <materialDesign:PackIcon Kind="CheckboxMarkedCircle" Width="20" Height="20"/>
                                <TextBlock HorizontalAlignment="Right"> Transfer</TextBlock>
                            </StackPanel>
                        </Button>

                        <Button Grid.Column="4" FontSize="12" Padding="2" Margin="10" Name="UndoBtn" Click="UndoBtn_Click" IsEnabled="False">
                            <StackPanel Orientation="Horizontal" >
                                <materialDesign:PackIcon Kind="Undo"/>
                                <TextBlock HorizontalAlignment="Right"> Undo</TextBlock>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
