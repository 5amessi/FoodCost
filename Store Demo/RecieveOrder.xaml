                                            <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Foreground="Black" Name="Total_Price_Without_Tax_Purchase" IsReadOnly="True"/>

                                            <Label Content="Total Price With Tax:" FontSize="15" VerticalAlignment="Center"/>
                                            <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Foreground="Black" Name="Total_Price_With_Tax_Purchase" IsReadOnly="True"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </GroupBox>

                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" >
                            <Button Grid.Column="1" Name="Recieve" Background="Green"  FontSize="12" Width="150" HorizontalAlignment="Right" Click="RecievedBtn_Click" IsEnabled="False">
