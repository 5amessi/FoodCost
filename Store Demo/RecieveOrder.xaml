                                                      PreviewTextInput="NumberValidationTextBox" PreviewKeyDown="NeglectWhiteSpace" MouseDoubleClick="ItemKitchenTransferDGV_MouseDoubleClick">
                                </DataGrid>

                                <Grid Grid.Row="1" TextBlock.FontSize="13" TextBlock.FontWeight="Normal">
                                    <StackPanel HorizontalAlignment="Left" Margin="10 5 0 0" Orientation="Horizontal">
                                        <Label Content="Number Of Items:" FontSize="15" VerticalAlignment="Center"/>
                                        <TextBox BorderThickness="2" Width="100" Text="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20" Foreground="Black" Name="NumberOfItemsKitchen" IsReadOnly="True"/>

                                        <Label Content="Total Price With Tax:" FontSize="15" VerticalAlignment="Center"/>
