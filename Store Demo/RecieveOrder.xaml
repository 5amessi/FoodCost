                            <ColumnDefinition Width="251*"/>
                            <ColumnDefinition Width="532*"/>
                            <ColumnDefinition Width="54*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <GroupBox Header="P.Os" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Grid.RowSpan="2" Margin="5">
                            <DataGrid ItemsSource="{Binding}" Name="RecieveOrderDGV" AutoGenerateColumns="True" ScrollViewer.CanContentScroll="True" TextBlock.FontSize="12" FontWeight="Normal"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" IsReadOnly="True" MouseLeftButtonUp="RecieveOrderDGV_Click"/>
