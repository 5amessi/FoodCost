                                    <TextBox Grid.Column="3" Grid.Row="1" Name="ToKitchenKitchentxt" VerticalAlignment="Center"  Foreground="Black" TextBlock.TextAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False"/>

                                </Grid>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Items" Grid.Row="1" Margin="10 10 10 10" FontSize="20" TextBlock.FontWeight="Bold">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
